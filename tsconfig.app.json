{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",   // ✅ Exclude Jest test files
    "src/test.ts"     // ✅ Optional, unless it's used in your app build
  ]
}
